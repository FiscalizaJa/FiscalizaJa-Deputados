---
import "../styles/global.scss";

import Navbar from "../components/Navbar.astro"
import CookieConsent from "../components/CookieConsent.astro";

const { title, description, tags, og_img } = Astro.props

const prodURL = import.meta.env.PUBLIC_PRODUCTION_URL
let social_img = og_img || "https://deputados.fiscalizaja.com/vault.png"

const href = Astro.url.pathname
---

<html lang="pt-br">
    <head>
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="keywords" content="fiscalizajá, câmara dos deputados, portal da câmara dos deputados, deputados federais, despesas dos deputados federais, gastos dos deputados" />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={prodURL + href} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={social_img} />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={prodURL + href} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={social_img} />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta charset="utf-8" />
        <link rel="sitemap" href="https://deputados.fiscalizaja.com/sitemap.xml" />

        <!-- Microsoft Clarity setup -->
        <script type="text/javascript">
        (function(c,l,a,r,i,t,y){
            c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
            t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
            y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", "kfojhsoaui");
        console.log(window.clarityLoaded)
        </script>
    </head>
    <body>
        <Navbar />
        <div id="site-container">
            <slot />
        </div>
        <CookieConsent />
    </body>
</html>